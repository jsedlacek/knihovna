---
import icon from "#@/images/icon.svg";

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="cs">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Nejlepší české e-knihy zdarma z městské knihovny. Moderní romány, klasika, poezie i divadelní hry s hodnocením 4,0 a vyšším."
        />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href={icon.src} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>

<style is:global>
    @import "#@/styles/global.css";
</style>

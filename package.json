{
  "name": "knihovna",
  "version": "1.0.0",
  "description": "Czech e-books static site",
  "type": "module",
  "imports": {
    "#@/*": "./src/*"
  },
  "scripts": {
    "dev": "vike dev",
    "start": "vike dev",
    "build": "vike build",
    "preview": "vike preview",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run lint && npm run format:check && npm test",
    "scrape": "node src/scripts/scrape-books.ts",
    "deploy": "wrangler deploy --assets ./dist",
    "test": "node --test src/**/*.test.ts",
    "test:watch": "node --test --watch src/**/*.test.ts",
    "lint": "oxlint src/",
    "lint:fix": "oxlint src/ --fix",
    "format": "biome format --write",
    "format:check": "biome format",
    "fix": "npm run lint:fix && npm run format"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "lucide-react": "^0.539.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "vike": "^0.4.237",
    "vike-react": "^0.6.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@tailwindcss/vite": "^4.1.12",
    "@types/node": "^24.0.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/yargs": "^17.0.32",
    "@vitejs/plugin-react": "^4.3.4",
    "cheerio": "^1.1.2",
    "domhandler": "^5.0.3",
    "oxlint": "^1.12.0",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "vite": "^6.0.3",
    "wrangler": "^4.30.0",
    "yargs": "^17.7.2"
  }
}
